</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="page-header">
            <div class="header-content">
                <h1><i class="fas fa-calendar-star"></i> Events in <%= city %></h1>
                <div class="city-info">
                    <i class="fas fa-map-marker-alt"></i> <%= city %>, India
                    <% if (category && category !== 'all') { %>
                        ‚Ä¢ <span class="category-tag"><i class="fas fa-tag"></i> <%= category %></span>
                    <% } %>
                </div>
                
                <% if (message) { %>
                    <div class="message"><%= message %></div>
                <% } %>
                
                <div class="action-buttons">
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-home"></i> Back to Home
                    </a>
                    <a href="/dashboard" class="btn btn-secondary">
                        <i class="fas fa-tachometer-alt"></i> View Dashboard
                    </a>
                    <a href="https://docs.google.com/spreadsheets/d/12AsVedCq7Qkg5FPuA6Wzhe5jxsC6TY2ooEuZ34l1Ch0/edit?gid=713865691#gid=713865691" 
                       target="_blank" class="btn btn-secondary">
                        <i class="fas fa-file-excel"></i> Open Google Sheets
                    </a>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="filters">
            <div class="filter-header">
                <h3><i class="fas fa-filter"></i> Filter Events</h3>
                <span class="stat-label"><%= events.length %> events found</span>
            </div>
            <div class="filter-options">
                <button class="filter-btn active" onclick="filterEvents('all')">All Events</button>
                <button class="filter-btn" onclick="filterEvents('upcoming')">Upcoming</button>
                <button class="filter-btn" onclick="filterEvents('today')">Today</button>
                <button class="filter-btn" onclick="filterEvents('free')">Free Events</button>
                <button class="filter-btn" onclick="filterEvents('featured')">Featured</button>
            </div>
        </div>

        <!-- Events Grid -->
        <div class="events-grid" id="eventsGrid">
            <% if (events.length === 0) { %>
                <div class="no-events">
                    <i class="fas fa-calendar-times"></i>
                    <h3>No events found for <%= city %></h3>
                    <p>Try selecting a different city or check back later for new events.</p>
                    <a href="/" class="btn btn-primary">
                        <i class="fas fa-search"></i> Search Other Cities
                    </a>
                </div>
            <% } else { %>
                <% events.forEach((event, index) => { 
                    // Parse date for display
                    const eventDate = new Date(event.date);
                    const day = eventDate.getDate();
                    const month = eventDate.toLocaleString('default', { month: 'short' });
                    const isFeatured = index < 2; // First 2 events as featured
                %>
                    <div class="event-card <%= isFeatured ? 'featured' : '' %>" 
                         data-status="<%= event.status || 'upcoming' %>"
                         data-price="<%= event.price === 'Free' ? 'free' : 'paid' %>">
                        <!-- Event Image -->
                        <div class="event-image">
                            <% if (event.image) { %>
                                <img src="<%= event.image %>" alt="<%= event.name %>">
                            <% } else { %>
                                <div class="image-placeholder">
                                    <i class="fas fa-calendar-day"></i>
                                </div>
                            <% } %>
                            <div class="event-date">
                                <div class="day"><%= day %></div>
                                <div class="month"><%= month %></div>
                            </div>
                        </div>

                        <!-- Event Content -->
                        <div class="event-content">
                            <div class="event-header">
                                <h3><%= event.name %></h3>
                                <% if (event.category && event.category !== 'all') { %>
                                    <span class="event-category"><%= event.category %></span>
                                <% } %>
                            </div>

                            <div class="event-details">
                                <div class="event-detail-item">
                                    <i class="fas fa-calendar-alt"></i>
                                    <span><strong>Date:</strong> <%= event.date %></span>
                                </div>
                                
                                <div class="event-detail-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span><strong>Venue:</strong> <%= event.venue %></span>
                                </div>
                                
                                <div class="event-detail-item">
                                    <i class="fas fa-city"></i>
                                    <span><strong>City:</strong> <%= event.city %></span>
                                </div>
                                
                                <% if (event.price) { %>
                                    <div class="event-detail-item">
                                        <i class="fas fa-tag"></i>
                                        <span><strong>Price:</strong> <%= event.price %></span>
                                    </div>
                                <% } %>
                                
                                <% if (event.status) { %>
                                    <span class="event-status <%= event.status.toLowerCase() %>">
                                        <%= event.status %>
                                    </span>
                                <% } %>
                            </div>

                            <div class="event-actions">
                                <a href="<%= event.url %>" target="_blank" class="btn-view">
                                    <i class="fas fa-external-link-alt"></i> View Details
                                </a>
                                <% if (event.description) { %>
                                    <button class="btn-info" onclick="showDescription(<%= index %>)">
                                        <i class="fas fa-info-circle"></i> More Info
                                    </button>
                                <% } %>
                            </div>
                        </div>

                        <div class="event-footer">
                            <small><i class="fas fa-database"></i> Scraped: <%= new Date(event.scrapedAt).toLocaleDateString() %></small>
                            <small><i class="fas fa-clock"></i> <%= new Date(event.scrapedAt).toLocaleTimeString() %></small>
                        </div>
                    </div>

                    <!-- Description Modal (hidden by default) -->
                    <% if (event.description) { %>
                        <div class="description-modal" id="modal-<%= index %>">
                            <div class="description-content">
                                <button class="close-modal" onclick="closeModal(<%= index %>)">
                                    <i class="fas fa-times"></i>
                                </button>
                                <h3><%= event.name %></h3>
                                <div class="event-detail-item">
                                    <i class="fas fa-calendar-alt"></i>
                                    <span><strong>Date:</strong> <%= event.date %></span>
                                </div>
                                <div class="event-detail-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span><strong>Venue:</strong> <%= event.venue %></span>
                                </div>
                                <div class="event-detail-item">
                                    <i class="fas fa-city"></i>
                                    <span><strong>City:</strong> <%= event.city %></span>
                                </div>
                                <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid var(--border);">
                                    <h4>Description</h4>
                                    <p><%= event.description %></p>
                                </div>
                                <div style="margin-top: 20px;">
                                    <a href="<%= event.url %>" target="_blank" class="btn-view" style="display: inline-block;">
                                        <i class="fas fa-external-link-alt"></i> Visit Event Page
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% }); %>
            <% } %>
        </div>

        <!-- Footer -->
        <div class="page-footer">
            <div class="stats">
                <div class="stat-item">
                    <span class="stat-number"><%= events.length %></span>
                    <span class="stat-label">Total Events</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number" id="upcomingCount">
                        <%= events.filter(e => e.status === 'upcoming' || e.status === 'today').length %>
                    </span>
                    <span class="stat-label">Upcoming</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number" id="freeCount">
                        <%= events.filter(e => e.price === 'Free').length %>
                    </span>
                    <span class="stat-label">Free Events</span>
                </div>
            </div>
            <div class="last-updated">
                <i class="fas fa-sync-alt"></i> Last updated: <%= new Date().toLocaleString() %>
                <br>
                <small>Data sourced from Google Events via SERP API ‚Ä¢ Auto-sync with Google Sheets</small>
            </div>
        </div>
    </div>

    <script>
        // Filter events function
        function filterEvents(filterType) {
            const cards = document.querySelectorAll('.event-card');
            const filterBtns = document.querySelectorAll('.filter-btn');
            
            // Update active button
            filterBtns.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            // Filter cards
            cards.forEach(card => {
                switch(filterType) {
                    case 'all':
                        card.style.display = 'flex';
                        break;
                    case 'upcoming':
                        const status = card.getAttribute('data-status');
                        card.style.display = (status === 'upcoming' || status === 'today') ? 'flex' : 'none';
                        break;
                    case 'today':
                        const todayStatus = card.getAttribute('data-status');
                        card.style.display = todayStatus === 'today' ? 'flex' : 'none';
                        break;
                    case 'free':
                        const price = card.getAttribute('data-price');
                        card.style.display = price === 'free' ? 'flex' : 'none';
                        break;
                    case 'featured':
                        card.style.display = card.classList.contains('featured') ? 'flex' : 'none';
                        break;
                }
            });
            
            // Update count
            const visibleCards = Array.from(cards).filter(card => 
                card.style.display !== 'none'
            ).length;
            document.querySelector('.filter-header .stat-label').textContent = 
                `${visibleCards} events found`;
        }

        // Show description modal
        function showDescription(index) {
            const modal = document.getElementById(`modal-${index}`);
            if (modal) {
                modal.style.display = 'flex';
                document.body.style.overflow = 'hidden';
            }
        }

        // Close modal
        function closeModal(index) {
            const modal = document.getElementById(`modal-${index}`);
            if (modal) {
                modal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        }

        // Close modal when clicking outside
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('description-modal')) {
                e.target.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        });

        // Add hover effect to cards
        document.addEventListener('DOMContentLoaded', function() {
            const cards = document.querySelectorAll('.event-card');
            
            cards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-10px) scale(1.02)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });

            // Initialize counts
            updateEventCounts();
        });

        // Update event counts
        function updateEventCounts() {
            const upcomingCount = <%= events.filter(e => e.status === 'upcoming' || e.status === 'today').length %>;
            const freeCount = <%= events.filter(e => e.price === 'Free').length %>;
            
            document.getElementById('upcomingCount').textContent = upcomingCount;
            document.getElementById('freeCount').textContent = freeCount;
        }

        // Search within page
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.key === 'k') {
                e.preventDefault();
                const search = prompt('Search events by name, venue, or category:');
                if (search) {
                    const cards = document.querySelectorAll('.event-card');
                    const searchLower = search.toLowerCase();
                    
                    cards.forEach(card => {
                        const text = card.textContent.toLowerCase();
                        card.style.display = text.includes(searchLower) ? 'flex' : 'none';
                    });
                    
                    const visibleCards = Array.from(cards).filter(card => 
                        card.style.display !== 'none'
                    ).length;
                    document.querySelector('.filter-header .stat-label').textContent = 
                        `${visibleCards} events found for "${search}"`;
                }
            }
        });

        // Export to CSV function
        function exportToCSV() {
            const events = <%= JSON.stringify(events) %>;
            let csv = 'Event Name,Date,Venue,City,Category,Price,Status,URL\n';
            
            events.forEach(event => {
                csv += `"${event.name}","${event.date}","${event.venue}","${event.city}","${event.category}","${event.price}","${event.status}","${event.url}"\n`;
            });
            
            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `events-${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
        }
    </script>
</body>
</html>